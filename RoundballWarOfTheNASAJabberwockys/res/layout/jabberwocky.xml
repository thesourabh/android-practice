<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Jabberwocky" >

    <WebView
        android:id="@+id/wvJabberwocky"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignRight="@+id/wvJabberwocky"
        android:layout_marginRight="52dp"
        android:onClick="loadImage"
        android:text="@string/button_jabberwocky_image" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wvJabberwocky"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="38dp"
        android:layout_toLeftOf="@+id/button2"
        android:onClick="loadWikipedia"
        android:text="@string/button_wikipedia" />

</RelativeLayout>
